<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/contentBodyColor">

    <TextView
        android:id="@+id/settings_title"
        style="@style/viewParent.headerText"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/background_top"
        android:padding="16dp"
        android:text="Definições"
        android:textAlignment="center"
        android:textColor="@color/white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="30dp"
        android:layout_below="@id/settings_title">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/nameTextView"
                style="@style/viewParent.headerText"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/emailTextView"
                android:layout_below="@id/nameTextView"
                style="@style/viewParent.headerText"
                android:layout_marginStart="5dp"
                android:textColor="#5D5C5C"
                android:textSize="16sp" />

        </RelativeLayout>

        <TextView
            style="@style/viewParent.headerText.settingsMiniTitle"
            android:text="Perfil" />

        <TextView
            android:id="@+id/editProfileTextView"
            style="@style/viewParent.headerText.settingsTextIcon"
            android:text="Editar Perfil"
            app:drawableLeftCompat="@drawable/ic_edit_profile"
            android:focusable="true"
            android:clickable="true"/>

        <TextView
            android:id="@+id/editPasswordTextView"
            style="@style/viewParent.headerText.settingsTextIcon"
            android:layout_marginTop="10dp"
            android:text="Alterar Password"
            app:drawableLeftCompat="@drawable/ic_edit_password"
            android:focusable="true"
            android:clickable="true"/>

        <TextView
            style="@style/viewParent.headerText.settingsMiniTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sair" />

        <TextView
            android:id="@+id/logoutTextView"
            style="@style/viewParent.headerText.settingsTextIcon"
            android:text="Sair"
            app:drawableLeftCompat="@drawable/ic_logout"
            android:focusable="true"
            android:clickable="true"/>


    </LinearLayout>
</RelativeLayout>